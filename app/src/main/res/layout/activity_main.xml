<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/welcomeText"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{welcomeText, default=my_default}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btnKotlinSynthetic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin Synthetic" />
    <Button
        android:id="@+id/btnFindById"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find View By Id" />
    <Button
        android:id="@+id/btnViewBind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Binding" />


</LinearLayout>